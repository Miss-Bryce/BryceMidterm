<h1>Create New Golfer</h1>

<form method = "post">
    <fieldset class = "form-group">
        <label for = "golferName" class="control-lavel col-2">Golfer Name</label>
        <input class = "form-control" name="golferName" id="golferName" required/>

        <label for = "holes" class="control-lavel col-2">Holes</label>
        <input class = "form-control" name="holes" id="holes" required/>

        <label for = "cartRequired" class="control-lavel col-2">Cart Required</label>
        <input class = "form-control" name="cartRequired" id="cartRequired" required/>

        <label for = "date" class="control-lavel col-2">Date</label>
        <input class = "form-control" name="date" id="date" required/>

        <label for = "greenFee" class="control-lavel col-2">Green Fee</label>
        <input class = "form-control" name="greenFee" id="greenFee" required/>
    </fieldset>

    <div class = "offset-2">
        <button class = "btn btn-primary">Save</button>
    </div>
</form>