<h1>Teetime Details</h1>

<form method = "post">
    <fieldset class = "form-group">
        <label for = "golferName" class="control-lavel col-2">Golfer Name</label>
        <input type = "text" class = "form-control" name="golferName" id="golferName" required value = "{{teetime.golferName}}"/>

        <label for = "holes" class="control-lavel col-2">Holes</label>
        <input class = "form-control" name="holes" id="holes" list = "l1" required value = "{{teetime.holes}}"/>

        <label for = "cartRequired" class="control-lavel col-2">Cart Required</label>
        <input type = "radio" class = "form-control" name="cartRequired" id="cartRequired" value = "{{teetime.cartRequired}}" required/>

        <label for = "date" class="control-lavel col-2">Date</label>
        <input type = "text" class = "form-control" name="date" id="date" required value = "{{teetime.date}}"/>

        <label for = "greenFee" class="control-lavel col-2">Green Fee</label>
        <input class = "form-control" name="greenFee" id="greenFee" required value = "{{teetime.greenFee}}"/>
    </fieldset>

    <div class = "offset-2">
        <button class = "btn btn-primary">Save</button>
    </div>
</form>